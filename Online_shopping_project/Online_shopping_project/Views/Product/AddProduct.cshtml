
@model Online_shopping_project.Models.cloth
@{
    ViewBag.Title = "AddProduct";
}

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <h2>Add Product</h2>
        <div class="row">
            <div class="col-lg-4">

                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span>ProductName:</span>
                        @Html.TextBoxFor(m => m.clothName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Price:</span>
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span>Category:</span>
                        @Html.DropDownListFor(m => m.CategoryID, ViewBag.CatList as SelectList, "--select category--")
                    </div>
                    <div class="form-group">
                        <span>Material:</span>
                        @Html.DropDownListFor(m => m.MaterialID, ViewBag.MatList as SelectList, "--select category--")
                    </div>
                    <div>
                        <input type="file" name="Image" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add Product" class="btn btn-primary py-3 px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
}




